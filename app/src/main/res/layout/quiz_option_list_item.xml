<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="88dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/colorQuizOptionBackground"
        app:cardElevation="0dp"
        app:contentPadding="0dp"
    >

        <TextView
            android:id="@+id/quiz_option_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="24sp"
            android:fontFamily="@font/steelfish"
            android:shadowDx = "4"
            android:shadowDy = "4"
            android:shadowRadius = "1"
            android:textColor="@color/colorQuizOptionText"
            android:shadowColor = "@color/colorQuizOptionTextShadow"
            />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>